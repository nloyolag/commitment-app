<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="itesm.mx.commitment_app">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Login"
            android:label="@string/title_activity_login" />
        <activity android:name=".Welcome" />
        <activity android:name=".CreateAccount" />
        <activity android:name=".UserHome" />
        <activity android:name=".NewProject" />
        <activity android:name=".UserSettings" />
        <activity android:name=".Dashboard" android:theme="@style/noAnimTheme"/>
        <activity android:name=".Surveys" android:theme="@style/noAnimTheme"/>
        <activity android:name=".AnswerSurvey" />
        <activity android:name=".Requests" />
        <activity android:name=".Commitments" android:theme="@style/noAnimTheme"/>
        <activity android:name=".EditCommitment" />
        <activity android:name=".Team" android:theme="@style/noAnimTheme"/>
        <activity android:name=".ProjectSettings" />
        <activity android:name=".Notifications" android:theme="@style/noAnimTheme"/>
    </application>

</manifest>